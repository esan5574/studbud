@charset "UTF-8";
@import url("https://fonts.googleapis.com/css?family=Merriweather:400,700");
.app-container {
  background-color: white;
}
.page-container {
  margin: 2em 10em;
}
.page-container#home {
  text-align: left;
}
.page-container:not(#home) {
  display: none;
}
* {
  margin: 0;
  padding: 0;
}
html {
  font-size: 100%;
}
/*16px*/
body {
  background: white;
  font-family: "Gill Sans";
  font-weight: 400;
  line-height: 1.75;
  color: #000000;
}
p {
  margin-bottom: 1rem;
}
h1, h2, h3, h4, h5 {
  margin: 3rem 0 1.38rem;
  font-family: "Gill Sans";
  font-weight: 700;
  line-height: 1.3;
}
h1 {
  margin-top: 0;
  font-size: 3.052rem;
}
h2 {
  font-size: 2.441rem;
}
h3 {
  font-size: 1.953rem;
}
h4 {
  font-size: 1.563rem;
}
h5 {
  font-size: 1.25rem;
}
small, .text_small {
  font-size: 0.8rem;
}
* {
  box-sizing: border-box;
  font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS", sans-serif;
}
#home-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr 1fr;
  gap: 15px 40px;
  grid-template-areas: "tasklist timer" "tasklist pomodoro" "tasklist music";
}
#tasklist {
  grid-area: tasklist;
  background-color: #6699D4;
  border-radius: 20px;
}
#timer {
  grid-area: timer;
  background-color: #3AA26D;
  border-radius: 20px;
}
#pomodoro {
  grid-area: pomodoro;
}
#music {
  grid-area: music;
  background-color: yellowgreen;
}
nav {
  width: 100px;
  height: 100vh;
  flex-direction: row;
  position: absolute;
  left: 0;
  top: 0;
  background-color: #F5F5F5;
  display: flex;
  justify-content: space-around;
}
nav .nav-links {
  list-style: none;
  display: flex;
  flex-direction: column;
  padding: 5em 0em 30em 0em;
}
nav .nav-links .nav-item a {
  display: block;
  padding: 0.5em;
  text-decoration: none;
  color: #CACED2;
}
nav .nav-links .nav-item a:hover {
  background-color: #C6F1DB;
  border-radius: 0.5em;
  color: #3AA26D;
}
nav .nav-links .nav-item a.nav-active {
  color: #3AA26D;
}
.open-button {
  background-color: #6699D4;
  font-size: 20px;
  color: white;
  position: fixed;
  bottom: 23px;
  right: 28px;
  height: 40px;
  width: 40px;
  border: none;
  border-radius: 50%;
  cursor: pointer;
}
.btn-cancel {
  position: absolute;
  right: 10px;
  height: 30px;
  width: 30px;
  border: none;
  border-radius: 50%;
  cursor: pointer;
}
.form-popup {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.form-container {
  max-width: 300px;
  padding: 10px;
  background-color: #DEDEDE;
  border-radius: 20px;
}
.form-container h3 {
  margin: 5px 0px 5px 0px;
}
.form-container input {
  border: none;
  border-radius: 5px;
  margin: 2px;
  outline: none;
}
.form-container select {
  border: none;
  border-radius: 5px;
  margin: 2px;
  outline: none;
}
.form-container .submit {
  background-color: white;
  border-radius: 10px;
  border: none;
  padding: 10px 40px;
  margin: 10px 10px 0px 10px;
  display: block;
  margin-left: auto;
  margin-right: auto;
  cursor: pointer;
}
.accordion {
  background-color: #DEDEDE;
  color: black;
  cursor: pointer;
  padding: 18px;
  width: 100%;
  border: none;
  text-align: left;
  outline: none;
  font-size: 15px;
  transition: 0.4s;
  border-radius: 20px;
}
.accordion:after {
  content: "+";
  color: #777;
  font-weight: bold;
  float: right;
  margin-left: 5px;
}
.p-active:after {
  content: "âˆ’";
}
.panel {
  padding: 0 18px;
  display: none;
  background-color: #DEDEDE;
  border-radius: 0px 0px 20px 20px;
  overflow: hidden;
}
#t-buttons {
  list-style: none;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
#t-buttons button {
  background-color: #DEDEDE;
  border: none;
  border-radius: 20px;
  padding: 10px 25px 10px 25px;
  cursor: pointer;
}
