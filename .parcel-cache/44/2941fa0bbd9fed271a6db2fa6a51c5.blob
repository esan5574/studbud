@import url("https://fonts.googleapis.com/css?family=Merriweather:400,700");
.app-container {
  background-color: #c2c2c2;
}
.page-container {
  margin: 10em;
}
.page-container#home {
  text-align: left;
}
.page-container:not(#home) {
  display: none;
}
* {
  margin: 0;
  padding: 0;
}
html {
  font-size: 100%;
}
/*16px*/
body {
  background: white;
  font-family: "Merriweather", serif;
  font-weight: 400;
  line-height: 1.75;
  color: #000000;
}
p {
  margin-bottom: 1rem;
}
h1, h2, h3, h4, h5 {
  margin: 3rem 0 1.38rem;
  font-family: "Merriweather", serif;
  font-weight: 700;
  line-height: 1.3;
}
h1 {
  margin-top: 0;
  font-size: 3.052rem;
}
h2 {
  font-size: 2.441rem;
}
h3 {
  font-size: 1.953rem;
}
h4 {
  font-size: 1.563rem;
}
h5 {
  font-size: 1.25rem;
}
small, .text_small {
  font-size: 0.8rem;
}
nav {
  width: 120px;
  height: 100vh;
  flex-direction: row;
  position: absolute;
  left: 0;
  top: 0;
  background-color: #F5F5F5;
  display: flex;
  justify-content: space-around;
}
nav .nav-links {
  list-style: none;
  display: flex;
  flex-direction: column;
  padding: 5em 0em 30em 0em;
}
nav .nav-links .nav-item a {
  display: block;
  padding: 0.5em;
  text-decoration: none;
  color: #CACED2;
}
nav .nav-links .nav-item a:hover {
  background-color: #C6F1DB;
  border-radius: 0.5em;
  color: #3AA26D;
}
nav .nav-links .nav-item a.active {
  color: #3AA26D;
}
